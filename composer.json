{
    "name": "bettergist/concurrency-helper",
    "description": "A super simple way to concurrently run many PHP instances.",
    "license": "MIT",
    "authors": [
        {
            "name": "Theodore R. Smith",
            "email": "theodore@phpexperts.pro",
            "homepage": "https://www.phpexperts.pro/"
        }
    ],
    "homepage": "https://github.com/hopeseekr/ConcurrencyHelper",
    "keywords": ["fork", "multi-threaded", "multithreaded", "fast", "parallel"],
    "require": {
        "php": ">=7.2.5",
        "ext-pcntl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "9.*",
        "phpexperts/dockerize": "*"
    },
    "autoload": {
        "psr-4": {
            "BettergistCollective\\ConcurrencyHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BettergistCollective\\ConcurrencyHelper\\Tests\\": "tests"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "preferred-install": "dist"
    }
}
